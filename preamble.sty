\newcommand{\myfigure}[4]{
    \begin{figure}[#3]
        \centering
        \IfFileExists{svgs/#2.svg}{%
            \includesvg[width=#1\textwidth]{svgs/#2}%
        }{%
            \includegraphics[width=#1\textwidth]{figures/#2.png}
        }
        \caption{#4}
        \label{#2}
    \end{figure}
}

